<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_money">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avail Balance: "
                android:textColor="#000000"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/walletB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginTop="-28dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="145dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rupee"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Add Money To Wallet"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/payment"
                android:hint="  Amount"
                android:layout_marginTop="30dp"
                />

            <Button
                android:id="@+id/m_add"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Add"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginBottom="50dp"
                />

            <TextView
                android:id="@+id/imp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="@string/note"
                android:textStyle="bold"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/min_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="Min Amount : 100"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/max_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="Max Amount : 5000"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginBottom="30dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>