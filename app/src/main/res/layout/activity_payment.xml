<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Payment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avail Balance: "
                android:textColor="#000000"
                android:layout_marginTop="30dp"
               android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/walletB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginTop="-28dp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="140dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/house" />

            <TextView
                android:id="@+id/Ngo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Name_value"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="List Number"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="id_value"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Amount To Donate"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/value"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/payment"
                android:hint=" Amount"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/doit"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:text="Donate"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginBottom="50dp"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>